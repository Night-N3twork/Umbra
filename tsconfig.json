{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "types": ["astro/client"]
  },
  "include": [
    "src",
    "astro.config.ts",
    "**/*.ts",  // Ensure TypeScript files are included
    "**/*.tsx", // Include TypeScript React files if applicable
    "**/*.js",  // Include JavaScript files if applicable
    "**/*.jsx"   // Include JavaScript React files if applicable
  ],
  "exclude": ["dist", "node_modules"]
}
